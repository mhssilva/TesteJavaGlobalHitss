	    	        int indiceElementoMeio;
					if (numeros.size() % 2 == 0) {
	    	            numeros.remove(indiceElementoMeio - 1);
	    	        } else {
	    	            numeros.remove(indiceElementoMeio);
	    	        }

	    	        System.out.println("Lista sem o número do meio: \n" + numeros);
	    	    }
        
